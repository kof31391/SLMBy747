<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a747.smartlearningmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main" android:screenOrientation="landscape" />
        <activity android:name=".Todo_List"
            android:windowSoftInputMode="stateAlwaysHidden" android:screenOrientation="landscape"/>
        <activity android:name=".Todo_View" android:screenOrientation="landscape" />
        <activity android:name=".News" android:screenOrientation="landscape"/>
        <activity android:name=".more_setting" android:screenOrientation="landscape"/>
        <activity android:name=".Todo_Add" android:screenOrientation="landscape" />
        <activity android:name=".Elearning" android:screenOrientation="landscape"/>
        <activity android:name=".Noti" android:screenOrientation="landscape"/>
        <activity android:name=".Todo_edit" android:screenOrientation="landscape"/>
        <activity android:name=".Profile" android:screenOrientation="landscape" />
        <activity android:name=".Video_elearning" android:screenOrientation="landscape" />

        <receiver android:name=".NotificationPublisher" />

        <activity android:name=".Subject_elearn" />
        <activity android:name=".About"></activity>
    </application>

</manifest>