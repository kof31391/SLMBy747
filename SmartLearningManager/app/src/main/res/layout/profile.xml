<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a747.smartlearningmanager.Profile"
    android:background="#2238c4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:background="#c1c7ff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Profile"
                    android:id="@+id/textView19"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#c7c7c7">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_std_id"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_fristname"
                        android:layout_row="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_lastname"
                        android:layout_row="2"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_grade"
                        android:layout_row="3"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_email"
                        android:layout_row="4"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_teleno"
                        android:layout_row="5"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_pf_image"
                        android:layout_row="6"
                        android:layout_column="0" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c1c7ff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Schedule of week"
                    android:id="@+id/textView21"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="380dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:id="@+id/textView20"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:autoText="true" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_mon">

                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tueday"
                            android:textSize="30dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_tue">

                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wednesday"
                            android:id="@+id/textView29"
                            android:textSize="30dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_wed">

                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thursday"
                            android:id="@+id/textView30"
                            android:textSize="30dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_thu">

                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friday"
                            android:id="@+id/textView31"
                            android:textSize="30dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_fri">

                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Saturday"
                            android:id="@+id/textView32"
                            android:textSize="30dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_sat">

                    </TableLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f65f5f">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunday"
                            android:id="@+id/textView33"
                            android:textSize="30dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TableLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_pf_sc_sun">

                    </TableLayout>

                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>
