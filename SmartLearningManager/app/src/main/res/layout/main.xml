<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".Main"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="#091534">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Smart Learning Manager"
                        android:id="@+id/textView4"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton7"
                            android:src="@drawable/infow"
                            android:background="#091534"
                            android:layout_alignTop="@+id/textView"
                            android:layout_gravity="right"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton9"
                        android:src="@drawable/home"
                        android:background="#091534"
                        android:layout_alignParentBottom="true"
  />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton10"
                        android:src="@drawable/videow"
                        android:background="#091534"
                        android:layout_marginLeft="50dp"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_toEndOf="@+id/imageButton" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton11"
                        android:src="@drawable/contactsw"
                        android:background="#091534"
                        android:layout_marginLeft="50dp"
                        android:layout_alignTop="@+id/imageButton2"
                        android:layout_toEndOf="@+id/textView" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton12"
                        android:src="@drawable/morew"
                        android:background="#091534"
                        android:layout_marginLeft="50dp"
                        android:layout_alignTop="@+id/imageButton3"
                        android:layout_alignParentEnd="true"
                        android:onClick="gotoTodo"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#cecece">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton13"
                    android:src="@drawable/view"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:background="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Schedule"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton14"
                    android:src="@drawable/rssb"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:background="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="News"
                    android:id="@+id/textView7"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/scroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_below="@+id/imageButton6"
                android:layout_marginTop="-10dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView3"
                    android:background="#cecece">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:editable="true"
                        android:background="#cecece"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_2"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_below="@+id/tv_news_1"
                        android:layout_alignParentStart="true"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:background="#e1e1e1"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_3"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_below="@+id/tv_news_2"
                        android:layout_alignParentStart="true"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_4"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_below="@+id/tv_news_3"
                        android:layout_alignParentStart="true"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:background="#e1e1e1"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_5"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:layout_below="@+id/tv_news_4"
                        android:layout_alignParentStart="true"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_6"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:background="#e1e1e1"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_7"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv_news_8"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:background="#e1e1e1"
                        android:onClick="onClickNews" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="ABC3"
                        android:id="@+id/tv_news_9"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:onClick="onClickNews"
                        android:layout_marginBottom="10dp" />

                </TableLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>