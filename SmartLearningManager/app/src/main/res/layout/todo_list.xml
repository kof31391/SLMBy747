<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Todo_List"
    android:background="#ffffff">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddItem"
        android:src="@drawable/addw"
        android:onClick="gotoEditor"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="9dp"
        style="@android:style/Widget.DeviceDefault.Light.ActionButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="#091534" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Smart Learning Manager"
                        android:id="@+id/textView5"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton4"
                            android:src="@drawable/infow"
                            android:background="#091534"
                            android:onClick="gotoAbout"
                            android:layout_alignTop="@+id/textView"
                            android:layout_gravity="right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageButton9"
                        android:src="@drawable/homew"
                        android:background="#091534"
                        android:layout_alignParentBottom="true"
                        android:onClick="gotoHome"
                        />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageButton15"
                        android:src="@drawable/rssw"
                        android:background="#091534"
                        android:layout_marginLeft="30dp"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_toEndOf="@+id/imageButton"
                        android:onClick="gotopagenews"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageButton10"
                        android:src="@drawable/pencilb"
                        android:background="#091534"
                        android:layout_marginLeft="30dp"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_toEndOf="@+id/imageButton" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageButton0"
                        android:src="@drawable/videow"
                        android:background="#091534"
                        android:layout_marginLeft="30dp"
                        android:onClick="gotoElean"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_toEndOf="@+id/imageButton" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageButton11"
                        android:src="@drawable/notiw"
                        android:background="#091534"
                        android:layout_marginLeft="30dp"
                        android:onClick="gotoNoti"
                        android:layout_alignTop="@+id/imageButton2"
                        android:layout_toEndOf="@+id/imageButton2"
                        />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageButton12"
                        android:src="@drawable/morew"
                        android:background="#091534"
                        android:layout_marginLeft="30dp"
                        android:layout_alignTop="@+id/imageButton3"
                        android:layout_alignParentEnd="true"
                        android:onClick="gotoSetting"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:layout_height="28dp" >

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton13"
                        android:src="@drawable/pencilb"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todo list"
                        android:id="@+id/textView6"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#cecece"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#ffffff"


                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#1b3c8f"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="     Search / Category "
                            android:id="@+id/textView31"
                            android:textColor="#ffffff"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:background="#c3d7e3"
                        android:layout_height="35dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:layout_width="200dp"
                                android:hint=" Search"
                                android:layout_height="25dp"
                                android:textSize="18dp"
                                android:background="@drawable/my_border"
                                android:id="@+id/searchBox" />

                            <Spinner
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"

                                android:entries="@array/categoriesSearch"
                                android:id="@+id/spinner2"
                                android:clickable="false"
                                android:touchscreenBlocksFocus="false"
                                android:background="#a3b4ff" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:src="@drawable/search"
                                android:onClick="Query"
                                style="@android:style/Widget.DeviceDefault.Light.ActionButton"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/imageButton27" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="List"
                            android:layout_marginTop="1dp"

                            android:layout_marginLeft="15dp"
                            android:id="@+id/textView3"
                            android:layout_marginBottom="1dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"

                        android:id="@+id/layoutid"
                        android:layout_height="match_parent">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/scrollView3" >


                            <com.example.a747.smartlearningmanager.MyListView
                                android:layout_width="match_parent"
                                android:layout_height="500dp"
                                android:background="#ffffff"
                                android:id="@+id/lvItems"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_above="@+id/btnAddItem"
                                />
                        </ScrollView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>